.App
  display flex
  flex-direction column

.App-header
  display flex
  flex-direction row
  justify-content center
  background-color black
  color white

.App-body
  display flex
  flex-direction column
  align-items stretch
  background-color yellow

  .user-name-area
    align-self center
    padding-top 50px
    padding-bottom 20px

    .user-name-input
      padding-left 30px
      font-family Arial, FontAwesome
      font-size 25px
      border 0
      height 50px
      width 600px
      border-top-left-radius 35px
      border-bottom-left-radius 35px

    .user-name-submit
      height 52px
      width 50px
      font-family Arial, FontAwesome
      font-size 25px
      color white
      border-top-right-radius 35px
      border-bottom-right-radius 35px
      border 0

  .tasks-area
    display flex
    flex-direction column
    justify-content space-around
    align-items stretch
    padding 50px 0px 50px
    background-color blue
    border 5px solid red

    .tasks-header
      padding 15px 30px
      align-self center
      border 1px solid black

    .tasks
      align-self center
      border 1px solid black
      width 800px
      display flex
      flex-display row
      justify-content space-around
      align-items center

*:focus
  outline none